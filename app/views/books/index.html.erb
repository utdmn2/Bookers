<h3>Books</h3>

<table>
 <thead>
  <tr>
   <th>title</th>
   <th>body</th>
   <th></th>
  </tr>
 </thead>

 <tbody>
  <% @books.each do |book| %>
 <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
<td><%= link_to "show", book_path(book.id) %></td>
<td><%= link_to "edit", edit_book_path(book.id) %></td>

</tr>
<% end %>
</tbody>
</table>


 <h2>New book</h2>
 <!-- form_withの部分 -->
 <%= form_with model: @book,url:'/books', local:true do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 <P>Body</P>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>